extends layout 
block content
    div(class="row")
        div(class="col s12")
            div(class="card blue-grey darken-1")
                div(class="card-content white-text")
                    span(class="render center card-title")=post["header"]
                    p(class="card-title")=post["user"]
                    div(class="card-panel blue-grey lighten-1")
                        p=post["post"]
                    h1(class="card-title") Comments:
                    each comment in comments
                        div(class="card-panel blue-grey lighten-1")
                            p(class="card-title")=comment["user"]
                            p=comment["comment"]
                    form(action = "" id="comment-form" method="POST") 
                        label(for="comment" id=post["_id"] class="white-text") Comment on post:
                        input(type="text" class="white-text" name="comment" id="comment" required)
                        button(class="btn blue-grey darken-2" type = "submit") Comment
    script(src="/javascripts/postComment.js")