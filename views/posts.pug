extends layout 
block content 
    each post, index in posts 
        div(class="row")
            div(class="col s12")
                div(class="card blue-grey darken-1")
                    div(class="card-content white-text")
                        span(class="render center card-title" id=post["_id"])=post["header"]
                        p=post["user"]
                        div(class="card-panel blue-grey lighten-1")
                            p(class="")=post["post"]
    script(src="/javascripts/renderSinglePost.js")